<!DOCTYPE html>
<html>
<head>
    @model SpacyWings.Models.Venta
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width, initial-scale = 1.0">
    <title>@ViewBag.Title = Eliminar venta</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="bg-dark text-white">
    @using (Html.BeginForm())
    {

        <div class="form-horizontal">
            <br />
            <h5 class="font-italic display-4 text-center">¿ E s t á s  &nbsp; s e g u r o  &nbsp; d e &nbsp; e l i m i n a r &nbsp; l a &nbsp; v e n t a ?</h5>
            <hr />

            <br />
            <br />
        </div>

        <div>
            <div class="d-flex justify-content-center">
                <h5 class="font-italic font-weight-bold display-5 text-center">Importe pagado:</h5>
                <h5 class="font-italic text-monospace display-5 text-center">&nbsp;$@Html.DisplayFor(model => model.Importe)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</h5>

                <br />
                <h5 class="font-italic font-weight-bold display-5 text-center"> Fecha en que se realizó la venta:</h5>
                <h5 class="font-italic text-monospace display-5 text-center">&nbsp;@Html.DisplayFor(model => model.FechaVenta)</h5>

            </div>
            <br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions d-flex justify-content-center">
                    <input type="submit" value="E l i m i n a r    v e n t a" class="btn btn-lg btn-outline-warning" />
                </div>
            }
            <br />
        </div>
    }

    <div>
        @Html.ActionLink("Regresar a mis ventas", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>
