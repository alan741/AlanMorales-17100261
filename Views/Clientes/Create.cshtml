<!DOCTYPE html>
<html>
<head>
    @model SpacyWings.Models.Cliente
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width, initial-scale = 1.0">
    <title>@ViewBag.Title = Agregar cliente</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="bg-dark text-white">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <h5 class="font-italic display-4 text-center">¡ A g r e g a  &nbsp; a  &nbsp; t u &nbsp; n u e v o &nbsp; c l i e n t e !</h5>
        <hr />

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group  d-flex justify-content-center">
                <div class="col-md-10  d-flex justify-content-center">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { style = "margin-right: 10px;", @class = "control-label" })
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { style = "margin-right: 10px;", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                <div class="col-md-10 d-flex justify-content-center">
                    @Html.LabelFor(model => model.Apellido, htmlAttributes: new { style = "margin-right: 10px;", @class = "control-label" })
                    @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { style = "margin-right: 10px;", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                <div class="col-md-10 d-flex justify-content-center">
                    @Html.LabelFor(model => model.Correo, htmlAttributes: new { style = "margin-right: 20px;", @class = "control-label" })
                    @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { style = "margin-right: 10px;", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                <div class="col-md-10 d-flex justify-content-center">
                    <input type="submit"  value="A g r e g a r  c l i e n t e" class="btn btn-outline-success" />
                </div>
            </div>
        </div>

    </div>
    }

    <div>
        @Html.ActionLink("Regresar a mis clientes", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>



