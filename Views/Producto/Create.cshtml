<!DOCTYPE html>
<html>
<head>
    @model SpacyWings.Models.Producto
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width, initial-scale = 1.0">
    <title>@ViewBag.Title = Agregar producto</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="bg-dark text-white">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <br />
            <h5 class="font-italic display-4 text-center">¡ A g r e g a  &nbsp; u n &nbsp; n u e v o &nbsp; p r o d u c t o !</h5>
            <hr />

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group d-flex justify-content-center">
                    <div class="col-md-10 d-flex justify-content-center">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { style = "margin-right: 10px;", @class = "control-label" })
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { style = "margin-right: 10px;", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group d-flex justify-content-center">
                    <div class="col-md-10 d-flex justify-content-center">
                        @Html.LabelFor(model => model.Precio, htmlAttributes: new { style = "margin-right: 20px;", @class = "control-label" })
                        @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { style = "margin-right: 10px;", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group d-flex justify-content-center">
                    <div class="col-md-10 d-flex justify-content-center">
                        <input type="submit" value="A g r e g a r  p r o d u c t o" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>

        </div>
    }

    <div>
        @Html.ActionLink("Regresar a mis productos", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>


